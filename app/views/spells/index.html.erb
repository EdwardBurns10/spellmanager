<p id="notice"><%= flash[:notice] %></p>

<h1>Spells</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spells.each do |spell| %>
      <tr>
        <td><%= link_to "#{spell.name}", spell %></td>
        <td><%= spell.level %></td>
        <td><%= link_to 'Edit', edit_spell_path(spell) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p>
<%= link_to 'New Spell', new_spell_path %> |
<%= link_to "Home", root_path %>    
</p>
